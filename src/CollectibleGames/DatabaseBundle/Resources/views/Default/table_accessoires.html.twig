<div id="ListeAccessoires" style="display:none;">
	<br><div class=titre>Liste des accessoires</div>
	<form action="{{ path('collection_add_accessoires')}}" method=POST>
		<table cellpadding="0" cellspacing="0" border="0" class="display" id="tableConsoles" width="100%">
			<thead>
				<tr>
					<th>Accessoire</th>
					{% if app.user %}<th>Ajouter</th>{% endif %}
				</tr>
			</thead>
			<tbody>
				{% set odd = false %}
				{% for accessoire in accessoires %}
				{% set odd = not odd %}
					<tr class="{% if accessoire.id in collection.accessoires %}gradeC{% else %}gradeA{% endif %} {% if odd %}odd{% else %}even{% endif %}">
						<td> 
							<a href="{{ path('show_accessoire', { 'id': accessoire.id }) }}">{{ accessoire.name }}</a> 
						</td>
					{% if app.user %}<td class="center"><input type="checkbox" id="accessoires[{{ accessoire.id }}]"  name="accessoires[{{ accessoire.id }}]" value="{{ accessoire.id }}" /></td>{% endif %}
					</tr>
				{% endfor %}
				{% if app.user %}
					<tr style="text-align: right"><td colspan=2><input type="submit" value="Ajouter les accessoires à votre collection" name="validerAjoutPossessionAccessoire"></td></tr>
				{% endif %}
			</tbody>
		</table>
	</form>
	<br><br><a href="{{ path('create_accessoire')}}">L'accessoire que vous cherchez n'est pas dans la base de donnée ? Ajoutez le.</a>
</div>
		
