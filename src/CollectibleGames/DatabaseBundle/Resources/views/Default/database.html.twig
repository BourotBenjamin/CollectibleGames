{% extends '::layout.html.twig' %}
{% block body_center %}			
		<div id='center'> <h1>Base de donnée des jeux vidéos</h1> </div>
		<div class='right'><a href="{{path('search_game')}}"><h5>Rechercher un jeu</a> / 
		<a href="{{path('search_accessoire')}}">un accessoire</a> / 
		<a href="{{path('search_console')}}">une console</h5></a><br></div><div class='clear'></div><div class='marques' id='center'>
		{% for editeur in editeurs %}
			{% if editeur.id != 0 %}
				<a href="{{ path('show_editeur', {'id': editeur.id }) }}"><img height=50 src='{{ img_root }}{{ editeur.imageUrl }}' title='{{ editeur.name }}' ></a>
			{% endif %}
		{% endfor %}
		</div><br><br>
		<div id='center'>Collectible games, c'est :<br>
				{{counts.nbPlateformes}} plateformes réparties dans {{editeurs|length}} marques. <br>
				{{counts.nbJeux}} jeux déclinés en {{counts.nbVersionsJeux}} versions. <br>
				{{counts.nbConsoles}} packs déclinés en {{counts.nbVersionsConsoles}} versions. <br>
				{{counts.nbAccessoires}} accessoires déclinés en {{counts.nbVersionsAccessoires}} versions. </div>";
{% endblock %}